@page "/Board/Create"

<PageTitle>Tilføj</PageTitle>

<h1>Tilføj</h1>

<h4>Board</h4>
<hr />
<div class="row">
    <EditForm Model="board" class="col-md-4">
        <div class="form-group">
            <label class="control-label">Navn</label>
            <InputText @bind-Value="@board.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Billede</label>
            <InputText @bind-Value="@board.Image" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Længde</label>
            <InputNumber @bind-Value="@board.Length" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Bredde</label>
            <InputNumber @bind-Value="@board.Width" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Tykkelse</label>
            <InputNumber @bind-Value="@board.Thickness" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Volumen</label>
            <InputNumber @bind-Value="@board.Volume" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Pris</label>
            <InputNumber @bind-Value="@board.Price" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Type</label>
            <InputSelect @bind-Value="@board.Type" class="form-control">
                @foreach (var type in Enum.GetValues(typeof(BoardType)))
                {
                    <option value="@type">@type</option>
                }
            </InputSelect>
        </div><br />
        <div class="form-group">
            <label class="control-label">Udstyr</label><br />
            @for (int i = 0; i < equipment.Count; i++)
            {
                <InputCheckbox class="form-check-input" @bind-Value="@checkedEquipment[i]" />
                <label class="form-check-label">@equipment[i].Name</label>
                <br />
            }
        </div><br />
        <div class="form-group">
            <button type="submit" value="Tilføj" class="btn btn-success">Tilføj</button>
            <NavLink class="btn btn-primary" href="" Match="NavLinkMatch.All">Tilbage til listen</NavLink>
        </div>
    </EditForm>
</div>

@code {
    List<Equipment> equipment = new();
    bool[] checkedEquipment { get; set; } = new bool[0];

    Board board = new();

    protected override async Task OnInitializedAsync()
    {
        equipment = await EquipmentRepo.Retrieve();
        checkedEquipment = new bool[equipment.Count];

        await base.OnInitializedAsync();
    }
}