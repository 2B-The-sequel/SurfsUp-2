    <tbody>
        @foreach (var item in boards)
        {
            @if (AuthenticationStateProvider.GetAuthenticationStateAsync().Result.User.IsInRole("Adminstrators") || !item.IsRented())
            {
                @if (AuthenticationStateProvider.GetAuthenticationStateAsync().Result.User.Identity.IsAuthenticated)
                {
                    //Priemium boards!
                    <tr>
                        <td>
                            <image width="150px" asp-append-version="true" src="@item.Image"></image>
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Length
                        </td>
                        <td>
