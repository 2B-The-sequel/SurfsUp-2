@model SurfsUp.Models.Board

@{
    ViewData["Title"] = "Lej et board";
}

<h1>Board Udlejning</h1>

<h4>Detaljer</h4>
<hr />
<div class="row">
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Lejepris for 1 uge:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    <div class="col-md-4">
        <form asp-action="CreateRental">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rental.StartRental" class="control-label"></label>
                <input asp-for="Rental.StartRental" class="form-control" type="date"/>
                <span asp-validation-for="Rental.StartRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.EndRental" class="control-label"></label>
                <input asp-for="Rental.EndRental" class="form-control" type="date"/>
                <span asp-validation-for="Rental.EndRental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tilføj" class="btn btn-primary" asp-action="ConfirmRental" asp-route-id=@Model.BoardId/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbage til listen</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }